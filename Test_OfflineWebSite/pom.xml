<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.skm.maven</groupId>
  <artifactId>Test_OfflineWebSite</artifactId>
  <version>0.0.1-SNAPSHOT</version>       <!--1 to 5 lines are auto generated(by default for any new maven project),in this xml 1 and last line is for project start and end-->
  <name>Test_OfflineWebSite</name>		   <!-- Project name -->
 <description>Selenium Testing Using TestNG and Maven</description>   <!-- Project Description -->
<!-- Upto this all are autogenerated stub may be you find differences in name and description but its having no effect on your project execution-->  
 
 <properties>
 <jre.level>1.8</jre.level>      <!-- JRE Properties -->
 <jdk.level>1.8</jdk.level>       <!-- JDK Properties -->
  <suiteXmlFile>src\test\resources\testng.xml</suiteXmlFile>
 </properties> 
 
  
  <build>                  <!-- use build before plug-in -->
		<plugins>           <!-- starting to insert plugin under plugins -->
			<!-- Compiler plug-in -->
			<plugin>                        <!-- first plugin of maven compiler -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
				<compilerVersion>1.8</compilerVersion>	<!-- java compiler -->
				<source>1.8</source>
				<target>1.8</target>
				</configuration>
			</plugin>                              <!-- first plugin ends here -->
			                                    <!-- Below plug-in is used to execute tests -->
			<plugin>                            <!-- maven surefire plugin for test execution -->
				<groupId>org.apache.maven.plugins</groupId>  <!-- just copy and paste -->
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.12.4</version>
				<configuration>
					<suiteXmlFiles> <!-- TestNG suite XML files is provided to pom to run after pom testng.xml called-->
						<suiteXmlFile>${suiteXmlFile}</suiteXmlFile>
					</suiteXmlFiles>
					<testFailureIgnore>true</testFailureIgnore>
				</configuration>
			</plugin>
		</plugins>    <!-- End to insert plugin under plugins -->
	</build>       <!-- we finished with plugin so we close build tag here -->
  
  
  <!-- Add Following Lines in Your POM File -->
 
  
  <!--here we are adding our offline website required dependencies-->
  
  <dependencies>  <!--add required under dependencies tag & when finished close dependencies-->
  
		<dependency>    <!--here we add first dependency-->
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-java</artifactId>
			<version>2.52.0</version>
		</dependency>      <!--here we close first dependency-->
		
	
		<dependency>         <!--here we add second dependency-->
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>6.8.5</version>
		</dependency>      
		    <!--here we add close second dependency-->
				
		<dependency>	<!--here we add extentreport dependency-->	
			<groupId>com.relevantcodes</groupId>
			<artifactId>extentreports</artifactId>
			<version>2.41.2</version>
</dependency>				<!--here we Close extentreport dependency-->
		
		
	</dependencies>   <!--close dependency tag here when u r finished with required dependency-->
  
 
</project>      <!--here our project is closed-->